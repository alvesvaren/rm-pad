# rm-pad config (TOML). Copy to rm-pad.toml or ~/.config/rm-pad/config.toml
# Config file search order: RMPAD_CONFIG env, ./rm-pad.toml, ~/.config/rm-pad/config.toml

# --- Connection ---
host = "10.11.99.1"
# SSH key path (used only if password is not set). Default: "rm-key"
# key_path = "rm-key"

# Login with password instead of key (user is always root).
# If set, key_path is ignored. Restrict file permissions: chmod 600 config.toml
# password = "your-root-password"

# --- Device paths on reMarkable ---
# pen_device = "/dev/input/event1"
# touch_device = "/dev/input/event2"

# --- Behaviour (same as CLI flags) ---
# touch_only = false
# pen_only = false
# stop_ui = false  # default: UI runs normally. Set true or use --stop-ui to stop xochitl service while streaming
# no_palm_rejection = false
# palm_grace_ms = 500
